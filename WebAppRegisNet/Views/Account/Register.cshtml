@model WebAppRegisNet.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<h4>Create a new account.</h4>
<hr />

<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Register">
            <div class="form-group">
                <label asp-for="Email" class="font-weight-bold"></label>
                <input asp-for="Email" class="form-control form-control-sm" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="font-weight-bold"></label>
                <input asp-for="Password" class="form-control form-control-sm" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="font-weight-bold"></label>
                <input asp-for="ConfirmPassword" class="form-control form-control-sm" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="font-weight-bold"></label>
                <select asp-for="Role" class="form-control form-control-sm" asp-items="Model.Roles"></select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Register</button>
        </form>
    </div>
</div>

<link rel="stylesheet" href="~/css/register.css" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
